<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
    <div class="mb-2">
    <%= form_with url: books_path, method: :get, local: true, class: 'form-inline mb-3' do %>
      <%= text_field_tag :tag, params[:tag], class: 'form-control mr-2', placeholder: 'タグ名' %>
      <%= submit_tag 'タグ検索', class: 'btn btn-secondary' %>
    <% end %>
    
     <%= link_to '新しい順', books_path(sort: 'new') %> |
     <%= link_to '評価の高い順', books_path(sort: 'rate') %>
     </div>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'layouts/errors', obj: @book %> 
      <%= render 'form', book: @book %>

    </div>
    <div class='col-md-8 offset-md-1'>
      <% if params[:tag].present? %>
      <h2>Books search for "<%= h params[:tag] %>"</h2>
      <% else %>
      <h2>Books</h2>
      <% end %>
      <div id="books-list">
      <%= render 'index', books: @books %>
      </div>
    </div>
  </div>
</div>