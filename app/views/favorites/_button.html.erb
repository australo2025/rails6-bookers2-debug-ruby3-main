<% liked = book.favorited_by?(current_user) %>
<% count = book.favorites.count %>

<% if liked %>
  <%= link_to book_favorite_path(book),
              method: :delete,
              remote: true,
              class: 'favorite-link liked',
              style: 'color:#e0245e; text-decoration:none;' do %>
    <i class="fa fa-heart"></i><%= count %>
  <% end %>
<% else %>
  <%= link_to book_favorite_path(book),
              method: :post,
              remote: true,
              class: 'favorite-link not-liked',
              style: 'color:#666; text-decoration:none;' do %>
    <i class="far fa-heart"></i><%= count %>
  <% end %>
<% end %>