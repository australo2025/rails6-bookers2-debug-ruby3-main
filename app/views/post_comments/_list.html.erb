<div id="comments-<%= book.id %>">
  <p>コメント件数：<%= book.post_comments.count %></p>

  <table>
    <% book.post_comments.each do |post_comment| %>
      <tr id="comment-<%= post_comment.id %>">
        <!-- 左：プロフィール画像 -->
        <td><%= image_tag post_comment.user.get_profile_image, size: "60x60" %></td>

        <!-- 中：名前・日付・本文 -->
        <td>
          <%= post_comment.user.name %>
          <%= post_comment.created_at.strftime('%Y/%m/%d') %>
          <%= post_comment.comment %>
        </td>

        <!-- 右：削除（自分のコメントのみ） -->
        <td>
          <% if post_comment.user == current_user %>
            <%= link_to "削除",
                        book_post_comment_path(book, post_comment),
                        method: :delete,
                        remote: true %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>