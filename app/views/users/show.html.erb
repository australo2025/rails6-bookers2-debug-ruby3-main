<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>

<table>
  <thead>
    <tr>
      <th>今日の投稿数</th>
      <th>昨日の投稿数</th>
      <th>前日比</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @count_today %></td>
      <td><%= @count_yesterday %></td>
      <td><%= percent_change(@count_today, @count_yesterday) %></td>
    </tr>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>今週の投稿数</th>
      <th>先週の投稿数</th>
      <th>前週比</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @count_this_week %></td>
      <td><%= @count_last_week %></td>
      <td><%= percent_change(@count_this_week, @count_last_week) %></td>
    </tr>
  </tbody>
</table>

<hr>
<h3>7日間分の投稿数</h3>

<table class="table table-bordered mb-4">
  <thead>
    <tr>
      <% @labels.each do |label| %>
        <th class="text-center"><%= label %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @counts.each do |c| %>
        <td class="text-center"><%= c %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<canvas id="postsChart" height="120"></canvas>

</div>
</div>
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  (function() {
    var ctx = document.getElementById('postsChart').getContext('2d');

    new Chart(ctx, {
      type: 'line',
      data: {
        labels: <%= raw @labels.to_json %>,
        datasets: [{
          label: '投稿した本の数',
          data: <%= raw @counts.to_json %>,
          fill: false,
          borderWidth: 2,
          tension: 0.3,
          pointRadius: 3
        }]
      },
      options: {
        responsive: true,
        scales: {
          y: { beginAtZero: true, ticks: { precision: 0 } }
        }
      }
    });
  })();
</script>

<div class="mt-4" id="daily-count-box">
  <h3 class="h5 mb-2">指定日の投稿数</h3>

  <%= form_with url: search_user_path(@user), method: :get, local: false, html: { id: "daily-count-form", class: "form-inline gap-2" } do %>
    <label for="date" class="mr-2 mb-2">日付</label>
    <%= date_field_tag :date, (params[:date] || Time.zone.today), id: "date", class: "form-control mb-2" %>
    <%= submit_tag "表示", class: "btn btn-primary mb-2" %>
  <% end %>

  <!-- 初期表示（ページ読み込み時）。AJAX後はここが置き換わる -->
  <div id="daily-count-result" class="mt-2">
    本日の投稿数：<strong><%= @count_today %></strong>
  </div>
</div>