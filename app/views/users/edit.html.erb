<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing User</h2>

      <%= form_with model: @user, local: true do |f| %>
        <%= render 'layouts/errors', obj: @user %>

        <div class="form-group">
          <%= f.label :name, 'Name' %>
          <%= f.text_field :name, class: "form-control name" %>  <!-- name="user[name]" -->
        </div>

        <div class="form-group">
          <%= f.label :profile_image, 'Image' %>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, 'Introduction' %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>

        <div class="form-group">
          <%= f.submit 'Update User', class: 'btn btn-secondary' %> <!-- テストが見る文言 -->
        </div>
      <% end %>
    </div>
  </div>
</div>