<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
	  <th>follows</th>
	  <th><%= user.followings.count %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= user.followers.count %></th>
  </tr>

</table>
　
<% if user == current_user %>
  <!-- 自分のプロフィール → 編集ボタンを表示 -->
  <div class="mb-3">
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
<% else %>
  <!-- 他人のプロフィール → フォロー/外すボタンを表示 -->
  <div class="mb-3">
    <% if current_user.following?(user) %>
      <%= button_to 'フォローを外す',
            user_relationships_path(user),
            method: :delete,
            class: 'btn btn-outline-secondary btn-block' %>
    <% else %>
      <%= button_to 'フォローする',
            user_relationships_path(user),
            method: :post,
            class: 'btn btn-success btn-block' %>
    <% end %>
  </div>
<% end %>

<% if user != current_user && current_user.mutual_follow?(user) %>
  <%= button_to 'chatを始める', rooms_path(user_id: user.id), method: :post %>
<% end %>